<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_ups_carrier_account_form" model="ir.ui.view">
        <field name="model">carrier.account</field>
        <field
            name="inherit_id"
            ref="base_delivery_carrier_label.carrier_account_view_form"
        />
        <field name="arch" type="xml">
            <field name="password" position="after">
                <field
                    name="ups_rest_shipper_number"
                    attrs="{'invisible': [('delivery_type', '!=', 'ups_rest')], 'required': [('delivery_type', '=', 'ups_rest')]}"
                />
                <field
                    name="ups_rest_license_number"
                    attrs="{'invisible': [('delivery_type', '!=', 'ups_rest')], 'required': [('delivery_type', '=', 'ups_rest')]}"
                />
                <field
                    name="ups_rest_file_format"
                    attrs="{'invisible': [('delivery_type', '!=', 'ups_rest')], 'required': [('delivery_type', '=', 'ups_rest')]}"
                />
            </field>
        </field>
    </record>

</odoo>
